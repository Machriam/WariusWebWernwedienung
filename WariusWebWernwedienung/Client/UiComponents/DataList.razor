<label style="padding:0" class="col-form-label col-md-12">@LabelText</label>
<div style="padding:0" class="d-flex justify-content-end col-md-12">
    <input disabled="@Disabled" class="form-control p-1" list="@_guid" @bind="SelectedText" />
</div>
@if (_filteredItems != null && _filteredItems.Count() > 0)
{
    <datalist id="@_guid">
        @foreach (var item in _filteredItems)
        {
            <option>@item.GetText</option>
        }
    </datalist>
}